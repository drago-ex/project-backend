{
	"name": "drago-ex/project-backend",
	"type": "drago-project-resource",
	"description": "Preconfigured basic backend module for the basic Drago Project.",
	"license": ["MIT"],
	"require": {
		"php": ">=8.3 <9",
		"drago-ex/application": "^1.0",
		"drago-ex/translator": "^2.0",
		"drago-ex/project-user": "^1.0",
		"drago-ex/project-front": "^1.0"
	},
	"extra": {
		"drago-project": {
			"install": {
				"copy": {
					"resources/app": "app",
					"resources/assets": "assets"
				}
			}
		}
	},
	"require-dev": {
		"phpstan/phpstan-nette": "^1.2.9",
		"tracy/tracy": "^2.11"
	},
	"scripts": {
		"phpstan": "phpstan analyse --level 5 --configuration phpstan.neon resources/app",
		"post-install-cmd": [
			"php dev.copy.php"
		],
		"post-update-cmd": [
			"php dev.copy.php"
		]
	}
}
